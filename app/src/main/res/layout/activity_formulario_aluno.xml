<?xml version="1.0" encoding="utf-8"?>

<!--Adicionando barra de rolagem na tela formulario - ela só pode ter um elemento filho, ou seja, seu filhe deve ter varios outros dentro-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--match_parent - pega o espeço do componete pai
            oriatation - orientação do componete-->

        <!--Inputs do formulario-->
        <EditText
            android:id="@+id/activity_formulario_aluno_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/nome"
            android:inputType="textCapSentences"
            android:importantForAutofill="no"
            tools:targetApi="o" />
        <!--id - identificação do componente
            wrap_content - pega o espaço nescessario
            hint - placeholder
            inputType - Tipo do input (email, telefone etc..)-->

        <EditText
            android:id="@+id/activity_formulario_aluno_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/telefone"
            android:inputType="phone"
            android:importantForAutofill="no"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/activity_formulario_aluno_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/activity_formulario_aluno_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/cpf"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/activity_formulario_aluno_RG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/rg"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/activity_formulario_CEP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/cep"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:targetApi="o" />

        <!--Botão-->
        <!--<Button-->
            <!--android:id="@+id/activity_formulario_aluno_botao_salvar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="8dp"-->
            <!--android:text="Salvar" />-->
        <!--text - label do botão-->

    </LinearLayout>
</ScrollView>